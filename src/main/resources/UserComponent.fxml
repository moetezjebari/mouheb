<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UserController">
    <children>
        <!-- Barre supérieure (entête) avec les labels et boutons -->
        <HBox prefHeight="64.0" prefWidth="900.0" spacing="10.0">
            <children>
                <!-- Label pour le nom -->
                <Label fx:id="labelNom" prefHeight="57.0" prefWidth="120.0" text="Nom">
                    <HBox.margin>
                        <Insets bottom="10.0" left="20.0" top="10.0"/>
                    </HBox.margin>
                </Label>

                <!-- Label pour le prénom -->
                <Label fx:id="labelPrenom" prefHeight="60.0" prefWidth="120.0" text="Prénom">
                    <HBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </HBox.margin>
                </Label>

                <!-- Label pour l'email -->
                <Label fx:id="labelEmail" prefHeight="58.0" prefWidth="180.0" text="Email">
                    <HBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </HBox.margin>
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>

                <!-- Label pour le type utilisateur -->
                <Label fx:id="labelType" prefHeight="58.0" prefWidth="150.0" text="Type Utilisateur">
                    <HBox.margin>
                        <Insets bottom="10.0" right="20.0" top="10.0"/>
                    </HBox.margin>
                </Label>

                <!-- Nouveau label pour la date d'inscription -->
                <Label fx:id="labelDateInscription" prefHeight="58.0" prefWidth="170.0" text="Date Inscription">
                    <HBox.margin>
                        <Insets bottom="10.0" right="20.0" top="10.0"/>
                    </HBox.margin>
                </Label>

                <!-- Nouveau label pour le téléphone -->
                <Label fx:id="labelTelephone" prefHeight="58.0" prefWidth="150.0" text="Téléphone">
                    <HBox.margin>
                        <Insets bottom="10.0" right="20.0" top="10.0"/>
                    </HBox.margin>
                </Label>

                <!-- Bouton pour supprimer un utilisateur -->
                <Button fx:id="btnSupprimer" mnemonicParsing="false" onAction="#supprimerUtilisateur" prefHeight="31.0" prefWidth="114.0" text="Supprimer">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="20.0"/>
                    </HBox.margin>
                </Button>

                <!-- Bouton pour modifier un utilisateur -->
                <Button fx:id="btnModifier" mnemonicParsing="false" onAction="#modifierUtilisateur" prefHeight="31.0" prefWidth="109.0" text="Modifier">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="20.0" top="20.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>
